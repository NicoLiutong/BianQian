<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bianqian.activity.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background"
        android:scaleType="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_back"
        >
        <com.example.bianqian.view.LineEditText
            android:id="@+id/login_passowrd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:hint="@string/password"
            android:textColorHint="@color/white"
            style="@style/MyEditText"/>
        <com.example.bianqian.view.LineEditText
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/login_passowrd"
            android:hint="@string/user_name"
            android:textColorHint="@color/white"
            style="@style/MyEditText"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/login_username">
            <TextView
                android:id="@+id/login_theamtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="我们的相遇才刚刚开始"
                android:ems="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/login_theamtext"
                android:layout_toRightOf="@id/login_theamtext"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="欢迎登陆喵记本"
                android:ems="1"/>
        </RelativeLayout>

        


</RelativeLayout>
</FrameLayout>
