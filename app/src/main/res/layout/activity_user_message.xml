<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bianqian.activity.UserMessageActivity">

    <include layout="@layout/basic_title"/>

    <RelativeLayout
        android:id="@+id/user_message_picture_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">
        <TextView
          style="@style/userMessageText"
          android:text="头像"
          android:layout_alignParentLeft="true"
          android:textColor="@color/black"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_message_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            />
        <View
            style="@style/userMessageLine"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_message_name_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        >
        <TextView
            style="@style/userMessageText"
            android:text="昵称"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/user_message_name"
            style="@style/userMessageText"
            android:layout_alignParentRight="true"
            android:textColor="@color/gray"
            />
        <View
            style="@style/userMessageLine"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_message_sex_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        >
        <TextView
            style="@style/userMessageText"
            android:text="性别"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/user_message_sex"
            style="@style/userMessageText"
            android:layout_alignParentRight="true"
            android:textColor="@color/gray"
            />
        <View
            style="@style/userMessageLine"
            />
    </RelativeLayout>
