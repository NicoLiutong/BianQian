<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bianqian.activity.ChangeUserMessageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@color/colorAccent">
        <Button
            android:id="@+id/change_message_backbutton"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/back_button"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/change_message_texttitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/change_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="完成"
            android:background="@color/green"
            android:layout_gravity="center_vertical"
            android:textSize="17sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/change_message_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/RegisterLinearLayout">
        <TextView
            android:id="@+id/change_message_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/change_message_content"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="7"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/change_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/RegisterLinearLayout">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|right"
                android:text="旧密码："
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/change_password_oldpassword"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="7"
                android:layout_gravity="center_vertical"
                android:inputType="textPassword"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/RegisterLinearLayout">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|right"
                android:text="新密码："
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/change_password_newpassword"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="7"
                android:layout_gravity="center_vertical"
                android:inputType="textPassword"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/RegisterLinearLayout">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|right"
                android:text="确认密码："
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/change_password_confirmpassword"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="7"
                android:layout_gravity="center_vertical"
                android:inputType="textPassword"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
