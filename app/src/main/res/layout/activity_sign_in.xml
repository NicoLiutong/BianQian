<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bianqian.activity.SignInActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="#01A1E7">
    <ImageButton
        android:id="@+id/sign_in_backbutton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="center"
        android:background="@null"
        android:src="@drawable/back_button"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:text="每日签到"
        android:textSize="18sp"
        android:layout_toRightOf="@id/sign_in_backbutton"
        android:layout_alignTop="@id/sign_in_backbutton"
        android:layout_alignBottom="@id/sign_in_backbutton"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sign_in_circle_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/user_picture"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_in_circle_image"
        android:layout_margin="5dp"
        android:textColor="@color/level_color"
        android:textSize="15sp"
        android:layout_toLeftOf="@id/sign_in_circle_image"/>
    <com.example.bianqian.view.MyProgressBar
        android:id="@+id/level_progress_bar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/level_text"
        android:layout_alignBottom="@id/level_text"
        android:layout_toRightOf="@id/level_text"
        app:progress_reached_bar_height="3dp"
        app:progress_unreached_bar_height="3dp"
        app:progress_reached_color="@color/reached_color"
        app:progress_unreached_color="@color/unreached_color"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/sign_in_month_all_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/level_progress_bar"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:textSize="15sp"/>
    
</RelativeLayout>
    
    <com.example.bianqian.view.WeekView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"/>
    <com.example.bianqian.view.CalendarView
        android:id="@+id/sign_in_calendar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="50dp"/>
</LinearLayout>
