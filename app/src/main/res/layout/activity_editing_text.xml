<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/editing_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bianqian.activity.EditingTextActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/editing_backbutton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:src="@drawable/btn_back_n"
            />

        <TextView
            android:id="@+id/editing_textdate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:textSize="15sp"/>
        <Button
            android:id="@+id/editing_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="完成"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/editing_edittext"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:inputType="textMultiLine"
        android:scrollHorizontally="false"
        android:linksClickable="true"
        android:gravity="top"
        android:scrollbars="vertical"
        android:autoLink="email|phone|web"
        android:background="@null"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/editing_red_button"
            style="@style/EditingTextMoodButton"
            android:background="@drawable/red_circle"/>
        <Button
            android:id="@+id/editing_purple_button"
            style="@style/EditingTextMoodButton"
            android:background="@drawable/purple_circle"/>
        <Button
            android:id="@+id/editing_pink_button"
            style="@style/EditingTextMoodButton"
            android:background="@drawable/pink_circle"/>
        <Button
            android:id="@+id/editing_yellow_button"
            style="@style/EditingTextMoodButton"
            android:background="@drawable/yellow_circle"/>
        <Button
            android:id="@+id/editing_green_button"
            style="@style/EditingTextMoodButton"
            android:background="@drawable/green_circle"/>
        <Button
            android:id="@+id/editing_blue_button"
            style="@style/EditingTextMoodButton"
            android:background="@drawable/blue_circle"/>
        <Button
            android:id="@+id/editing_gray_button"
            style="@style/EditingTextMoodButton"
            android:background="@drawable/gray_circle"/>
    </LinearLayout>

</LinearLayout>
